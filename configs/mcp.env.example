# MCP 运行与安全配置示例
MCP_TRANSPORT=sse
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_SSE_PATH=/mcp
MCP_AUTH_TOKEN=your-token

# 监控与日志
MCP_LOG_CALLS_ENABLED=1
MCP_LOGS_ROOT=./atf/logs
MCP_CALLS_LOG=./atf/logs/mcp_calls.jsonl

# 执行与容量
PYTEST_TIMEOUT=300
MAX_ERROR_LENGTH=500
MAX_HISTORY_SIZE=1000
ATF_AUTO_INSTALL_DEPS=0
